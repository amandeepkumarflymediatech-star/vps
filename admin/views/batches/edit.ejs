 
 
<%- include('../layouts/header') %> 
<%- include('../layouts/sidebar') %> 
<h2>Edit Class</h2>

<form method="POST">
  <input name="title" value="<%= classdata.title %>" required />

  <select name="courseId">
    <% data.forEach(c => { %>
      <option value="<%= c._id %>" <%= c._id.equals(classdata.courseId) ? "selected" : "" %>>
        <%= c.title %>
      </option>
    <% }) %>
  </select>

  <select name="instructorId">
    <% tutors.forEach(i => { %>
      <option value="<%= i._id %>" <%= i._id.equals(classdata.instructorId) ? "selected" : "" %>>
        <%= i.name %>
      </option>
    <% }) %>
  </select>

  <input name="price" value="<%= classdata.price %>" type="number" />
  <button type="submit">Update</button>
</form>
<%- include('../layouts/footer') %>